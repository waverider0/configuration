{
  "base_keymap": "VSCode",
  "buffer_font_size": 15,
  "file_types": {},
  "format_on_save": "off",
  "gutter": { "line_numbers": true },
  "hard_tabs": false,
  "minimap": { "show": "never" },
  "relative_line_numbers": true,
  "telemetry": { "diagnostics": false, "metrics": false },
  "theme": { "mode": "system", "light": "Ayu Light", "dark": "Ayu Dark" },
  "tab_size": 2,
  "ui_font_size": 16,
  "vim_mode": true,

  "diagnostics_max_severity": "off",
  "diagnostics": { "inline": { "enabled": false } },
  "scrollbar": { "diagnostics": "none" },
  "project_panel": { "show_diagnostics": "off" },
  "tabs": { "show_diagnostics": "off" }
}
