#!/bin/sh

sudo pacman -Syu \
             age \
       alacritty \
            curl \
          ffmpeg \
             fzf \
             git \
            htop \
       keepassxc \
            less \
      lm_sensors \
       moreutils \
             mpv \
          neovim \
         ripgrep \
            rofi \
            tmux \
          waybar \
            wget \
    wl-clipboard \
             zsh

git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ..
rm -rf yay

yay -S \
  brave-bin

./deploy.py
chsh -s /bin/zsh
shutdown now -r
